<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bamf.settings"
    coreApp="true" 
    android:sharedUserId="android.uid.system"
    android:process="system" > 

    <uses-sdk android:minSdkVersion="16" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.bamf.ics.permission.ROOT"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.FORCE_STOP_PACKAGES" />
    
    <permission android:name="com.bamf.ics.permission.READ_SETTINGS"
        android:label="@string/permlab_readsettings"
        android:description="@string/permdesc_readsettings"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="signature" />
    
    <permission android:name="com.bamf.ics.permission.RESTART_SYSTEMUI"
        android:label="@string/permlab_restartsysui"
        android:description="@string/permdesc_restartsysui"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="signature" />

    <application        
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"         
        android:hardwareAccelerated="true"
    	>
    	<receiver android:name=".utils.BootReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />                
            </intent-filter>
        </receiver>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/app_name"             
            android:screenOrientation="portrait"            
        	android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
	
        </activity>
        <activity
            android:name=".activities.QuickSettingsActivity"
            android:label="@string/quick_settings"
            android:screenOrientation="sensor"
        	android:launchMode="singleTask"
        	android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name=".activities.IconPreferenceActivity"            
            android:screenOrientation="portrait"
        	android:launchMode="singleTask" />
		<activity android:name=".activities.SystemAppsActivity"
		    android:screenOrientation="portrait"
        	android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.bamf.settings.systemapps"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.VisualLockscreenActivity"
            android:screenOrientation="portrait"
        	android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.bamf.settings.visuallockscreen"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.VisualSkinActivity"
            android:screenOrientation="portrait"            
        	android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.bamf.settings.visualskinchooser"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.ProgressActivity"
            android:screenOrientation="portrait"            
            android:theme="@android:style/Theme.Holo.Dialog"
        	android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.bamf.settings.progressactivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.NotificationManagerActivity"
            android:screenOrientation="portrait"
        	android:launchMode="singleTask"
        	android:uiOptions="splitActionBarWhenNarrow" >  
        </activity>
        <provider android:name="com.bamf.settings.provider.SettingsProvider" 
            android:exported="true" 
            android:process=":main" 
            android:multiprocess="false" 
            android:authorities="com.bamf.settings.SettingsContent" />
    </application>

</manifest>
