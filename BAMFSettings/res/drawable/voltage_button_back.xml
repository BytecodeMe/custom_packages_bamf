<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ff33b5e5"
                android:endColor="#ff33b5e5"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#ff33b5e5" />
           <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />        
        </shape>
    </item>
    <item>        
        <shape>
            <gradient
                android:endColor="#00000000"
                android:startColor="#00000000"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#00000000" />
           <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />            
        </shape>
    </item>
</selector>
