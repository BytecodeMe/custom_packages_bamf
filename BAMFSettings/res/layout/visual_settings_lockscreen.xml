<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:text="@string/configure_behavior"
            android:textAppearance="?android:attr/listSeparatorTextViewStyle" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:scaleType="fitXY"
            android:src="@drawable/list_divider_holo_dark" />

        <fragment
            android:id="@+id/visual_lockscreen_fragment"
            android:name="com.bamf.settings.preferences.visual.VisualLockscreenFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>