<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/configure_navigation_keys"
        android:textAppearance="?android:attr/listSeparatorTextViewStyle" 
        android:layout_margin="5dip"/>
        
    <ImageView
    	android:layout_width="match_parent"
    	android:layout_height="2dip"
    	android:src="@drawable/list_divider_holo_dark" 
    	android:scaleType="fitXY"/>   
    
    <fragment android:id="@+id/visual_navbar_setup_fragment" 
        android:name="com.bamf.settings.preferences.VisualNavbarSetupFragment" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"/>
        	
    <LinearLayout
        android:id="@+id/available_container"
        android:layout_marginTop="40dip"
        android:layout_width="match_parent"
    	android:layout_height="@*android:dimen/navigation_bar_height"
    	android:orientation="horizontal" >
    	
        <ImageView
            android:id="@+id/available_one"
            android:layout_marginLeft="40dip"
            android:src="@drawable/ic_sysbar_back"
            android:scaleType="center"
			android:layout_width="@dimen/navigation_key_width"
    		android:layout_height="match_parent" />
        <View 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />
        <ImageView
            android:id="@+id/available_two"
            android:src="@drawable/ic_sysbar_menu_large"   
            android:scaleType="center"         
			android:layout_width="@dimen/navigation_key_width"
    		android:layout_height="match_parent" />
        <View 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />
        <ImageView
            android:id="@+id/available_three"   
            android:src="@drawable/ic_sysbar_home" 
            android:scaleType="center"        
			android:layout_width="@dimen/navigation_key_width"
    		android:layout_height="match_parent" />
        <View 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />
        <ImageView
            android:id="@+id/available_four"  
            android:src="@drawable/ic_sysbar_recent" 
            android:scaleType="center"         
			android:layout_width="@dimen/navigation_key_width"
    		android:layout_height="match_parent" />
        <View 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                />
        <ImageView
            android:id="@+id/available_five" 
            android:src="@drawable/ic_sysbar_search" 
            android:layout_marginRight="40dip"
			android:scaleType="center"         
			android:layout_width="@dimen/navigation_key_width"
    		android:layout_height="match_parent" />
	</LinearLayout>   
</LinearLayout>